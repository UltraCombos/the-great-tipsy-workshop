{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    "opener:default",
     {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.openai.com"
        },
        {
          "url": "http://localhost:34800"
        },
        {
           "url": "http://**/"
        }
      ]
    },    
    "fs:allow-appdata-read"
  ]
}
